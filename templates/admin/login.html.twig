{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .full-height {
            height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background-color: #f8f9fa;
        }
        .login-container {
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            border-radius: 8px;
            background: #ffffff;
            padding: 30px;
        }
        .card-header {
            background: rgb(255, 255, 255);
            color:rgb(51, 51, 51);
            border-bottom: none;
        }
        .card-header h2 {
            margin: 0;
            text-align: center;
        }
        .form-box {
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
        }
        .form-group {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 1.5rem;
        }
        .form-label {
            font-weight: bold;
            flex: 1;
            margin-right: 10px;
            text-align: right;
        }
        .form-control {
            flex: 2;
            margin: 0;
        }
        .btn-primary {
            background-color: rgb(77, 73, 73);
            border: none;
            transition: background-color 0.3s ease;
            color: #ffffff;
            padding: 10px 20px;
            font-size: 1.00rem;
            display: block;
            width: 50%;
            margin: 20px auto 0;
        }
        .btn-primary:hover {
            background-color: rgb(18, 18, 19);
        }
    </style>
{% endblock %}

{% block body %}
<div class="full-height">
    <div class="card login-container">
        <div class="card-header">
            <h2>Admin Login</h2>
        </div>
        <div class="card-body">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <div class="form-box">
                <form method="post" action="{{ path('admin_login_check') }}">
                    <div class="form-group">
                        <label for="username" class="form-label">Username:</label>
                        <input type="text" class="form-control" id="username" name="_username" required autofocus>
                    </div>
                    <div class="form-group">
                        <label for="password" class="form-label">Password:</label>
                        <input type="password" class="form-control" id="password" name="_password" required>
                    </div>
                    <button type="submit" class="btn btn-primary">Login</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}
